<h2><%= @player.first_name %> <%= @player.last_name %></h2>
<%= error_messages_for :player, :header_message => "Unable to save your info.", :message => nil %>
<% form_for @player do |f| %>
<div class="box">
  <h3>Personal Info</h3></div>
  <div class="body">
    <p><%= f.label :name %><%= f.text_field :first_name %> <%= f.text_field :last_name %></p>
    <p><%= f.label :email %><%= f.text_field :login %></p>
  </div>
<div class="box">
  <h3>Skills</h3></div>
  <div class="body">
    <p><%= f.label :ability_id %><%= select("player", "ability_id", Ability.find(:all).map {|t| [ t.description, t.id ] }, {:selected => @player.ability.id}) %></p>
    <p><%= f.label :throw_level_id, "Throws" %><%= select("player", "throw_level_id", ThrowLevel.find(:all).map {|t| [ t.description, t.id ] }, {:selected => @player.throw_level.id}, :class => "inline") %></p>
  </div>
<input type="submit" value="Update"/> <%= link_to "Cancel", player_path(@player) %>
<% end %>