<div class="box">
  <h3>Login</h3></div>
  <div class="body">
    <% form_for @user_session, :url => { :controller => 'user_sessions', :action => 'create' } do |f| %>
      <%= f.error_messages %>
      <p><%= f.label :login, 'Email' %><%= f.text_field :login %></p>
      <p><%= f.label :password %></td><td><%= f.password_field :password %></p>
      <% if false %><%= f.check_box :remember_me %><%= f.label :remember_me, "Remember Me", :class => "inner" %><% end %>
      <p><%= f.submit "Login", :class => 'label-align' %> <%= link_to 'Forgot Password', new_password_reset_path %></p>
    <% end %>
  </div>