  <div class="box">
    <h3>All Games</h3></div>
    <div class="body">
      <% @games.each do |game| %>
        <h3><%= game.time.strftime("%b %d %Y %I:%M%p") if game.time %></h3>
        <p><%= game.team.name if game.team %> (<%= game.score %>) vs. <%= game.opponent.name if game.opponent %> (<%= game.opponent_score %>)  <%= link_to 'Edit', edit_game_url(game) %> <%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></p>
      <% end %>
      <br/>
      <%= link_to 'New', new_game_path %>
    </div>